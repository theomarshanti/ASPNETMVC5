@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @String.Format("{0:D}", Model.ReleaseDate)</li>
    <li>Date Added: @String.Format("{0:D}", Model.DateAdded)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
    <li>ID: @Model.Id</li>
</ul>